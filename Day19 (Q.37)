//Write a program to find the LCM of two numbers.

#include <stdio.h>

// Function to find HCF (GCD) using Euclid's algorithm
int hcf(int a, int b) {
    while (b != 0) {
        int temp = b;
        b = a % b;
        a = temp;
    }
    return a;
}

int main() {
    int num1, num2, lcm;

    printf("Enter first number: ");
    scanf("%d", &num1);

    printf("Enter second number: ");
    scanf("%d", &num2);

    int h = hcf(num1, num2);

    lcm = (num1 * num2) / h;

    printf("LCM of %d and %d is: %d\n", num1, num2, lcm);

    return 0;
}
