//Write a program to print the following pattern:
*****
 ****
  ***
   **
    *
#include <stdio.h>

int main() {
    int rows = 5;

    for (int i = rows; i >= 1; i--) {          // Outer loop for rows
        for (int j = 1; j <= rows - i; j++) {  // Print leading spaces
            printf(" ");
        }
        for (int k = 1; k <= i; k++) {         // Print stars
            printf("*");
        }
        printf("\n");                           // Move to next line
    }

    return 0;
}
