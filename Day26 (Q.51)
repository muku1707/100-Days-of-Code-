//Write a program to print the following pattern:
    5
   45
  345
 2345
12345

#include <stdio.h>

int main() {
    int rows = 5;

    for (int i = rows; i >= 1; i--) {             // Outer loop for rows
        for (int j = 1; j < i; j++) {             // Print leading spaces
            printf(" ");
        }
        for (int k = i; k <= rows; k++) {         // Print numbers from i to 5
            printf("%d", k);
        }
        printf("\n");                              // Move to next line
    }

    return 0;
}
