//Write a program to find the product of odd digits of a number.

#include <stdio.h>

int main() {
    int num, remainder;
    long long product = 1;
    int hasOdd = 0; // Flag to check if there is any odd digit

    printf("Enter an integer: ");
    scanf("%d", &num);

    int original = num; // Store original number

    // Handle negative numbers
    if (num < 0) {
        num = -num;
    }

    while (num != 0) {
        remainder = num % 10;
        if (remainder % 2 != 0) { // Check if digit is odd
            product *= remainder;
            hasOdd = 1;
        }
        num /= 10;
    }

    if (hasOdd) {
        printf("The product of odd digits of %d is: %lld\n", original, product);
    } else {
        printf("%d has no odd digits.\n", original);
    }

    return 0;
}

