//Write a program to print the following pattern:
*
**
***
****
*****

#include <stdio.h>

int main() {
    int rows = 5;

    for (int i = 1; i <= rows; i++) {       // Outer loop for rows
        for (int j = 1; j <= i; j++) {      // Inner loop for columns
            printf("*");
        }
        printf("\n");                        // Move to next line after each row
    }

    return 0;
}
